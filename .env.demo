# [DEMO CONFIG] - Demo environment configuration file
# Replace with real values for production use

# ============================================
# API Keys (Real Gemini API)
# ============================================
# [REAL API - GEMINI] Set your actual Gemini API key here
GEMINI_API_KEY=your_gemini_api_key_here

# [DEPRECATED] OpenAI API key no longer needed
# OPENAI_API_KEY=

# ============================================
# Demo Mode Flags
# ============================================
# [REAL API - GEMINI] Disable mock API, use real Gemini
USE_MOCK_API=false

# [REAL API - GEMINI] Enable real Gemini API mode
USE_GEMINI_REAL_API=true

# ============================================
# Dataset Configuration
# ============================================
# [DEMO CONFIG] - Path to demo dataset
DATASET_PATH=./demo_data/

# [DEMO CONFIG] - Video directory
VIDEO_PATH=./demo_data/videos/

# [DEMO CONFIG] - Caption data
CAPTION_PATH=./demo_data/captions/

# [DEMO CONFIG] - QA data
QA_PATH=./demo_data/qa/

# [DEMO CONFIG] - Feature data
FEATURE_PATH=./demo_data/features/

# ============================================
# Dataset Selection
# ============================================
# [DEMO CONFIG] - Choose dataset: egoschema, nextqa, intentqa, or demo
DATASET=demo

# ============================================
# Model Configuration
# ============================================
# [DEMO CONFIG] - Modality: video, text, graph, or all
MODALITY=all

# [DEMO CONFIG] - Agents type: single, multi_report, multi_star, multi_debate
AGENTS=multi_report

# ============================================
# Processing Configuration
# ============================================
# [DEMO CONFIG] - Use summary information if available
USE_SUMMARY_INFO=false

# [DEMO CONFIG] - Maximum number of videos to process (for demo: just 1)
MAX_VIDEOS=1

# [DEMO CONFIG] - Number of parallel workers (reduced for demo)
NUM_WORKERS=1

# ============================================
# Output Configuration
# ============================================
# [DEMO CONFIG] - Output directory for results
OUTPUT_DIR=./demo_results/

# [DEMO CONFIG] - Whether to save intermediate results
SAVE_INTERMEDIATE=true
